<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove=".github\**" />
    <Content Remove=".github\**" />
    <EmbeddedResource Remove=".github\**" />
    <None Remove=".github\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Documents\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="9.0.6" />
    <PackageReference Include="MudBlazor" Version="8.9.0" />
    <PackageReference Include="PdfPig" Version="0.1.11" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MMDataAccess\MMDataAccess.csproj" />
  </ItemGroup>

  <Target Name="PrePublishScript" BeforeTargets="BeforePublish">
    <Exec Command="powershell -ExecutionPolicy Bypass -File Scripts\PrePublish.ps1" />
  </Target>

  <Target Name="PostPublishScript" AfterTargets="AfterPublish">
    <Exec Command="powershell -ExecutionPolicy Bypass -File Scripts\PostPublish.ps1" />
  </Target>

</Project>
